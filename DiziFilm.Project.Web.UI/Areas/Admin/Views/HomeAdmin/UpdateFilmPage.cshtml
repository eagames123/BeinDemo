@model DiziFilm.Project.Web.UI.Areas.Admin.Models.AdminHomeViewIndexModel

@{
    ViewData["Title"] = "AddNewFilm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<!-- Main Content -->
<div id="content">

    <!-- Begin Page Content -->
    <div class="container-fluid">
        <p>Güncelle</p>
        <form class="user" asp-action="UpdateFilm" asp-controller="HomeAdmin" method="post" asp-area="Admin">

            <input asp-for="@Model.Film.id" type="hidden">

            <div class="form-group">
                <span>Name</span>
                <div class="form-group">
                    <input asp-for="@Model.Film.Name" type="text" placeholder="Fİlm Adı" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <span>Detail</span>
                <input asp-for="@Model.Film.Detail" type="text" placeholder="Detay" class="form-control">
            </div>
            <div class="form-group">
                <span>Category</span>
                <input asp-for="@Model.Film.Category" type="text" placeholder="Kategori" class="form-control">
            </div>
            <div class="form-group">
                <span>Fragman</span>
                <input asp-for="@Model.Film.Fragman" type="text" placeholder="Fragman" class="form-control">
            </div>
            <input type="submit" class="btn btn-primary btn-user btn-block" value="Güncelle" />
        </form>

    </div>

</div>