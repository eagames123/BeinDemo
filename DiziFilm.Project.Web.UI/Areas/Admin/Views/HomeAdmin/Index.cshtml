@model DiziFilm.Project.Web.UI.Areas.Admin.Models.AdminHomeViewIndexModel

@{
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            Dizi Filmler
        </h1>
    </div>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Dizi Filmler</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Film Adı</th>
                            <th>Kategori</th>
                            <th>Detay</th>
                            <th>Fragman</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.FilmListesi)
                        {
                            <tr>
                                <td>@item.id</td>
                                <td>@item.Name</td>
                                <td>@item.Category</td>
                                <td>@item.Detail</td>
                                <td>@item.Fragman</td>
                                <td>
                                    <a asp-area="Admin" asp-action="UpdateFilmPage" asp-controller="HomeAdmin" asp-route-id="@item.id" class="btn btn-light btn-icon-split">
                                        <span class="icon text-gray-600">
                                            <i class="fas fa-arrow-right"></i>
                                        </span>
                                        <span class="text">Güncelle</span>
                                    </a>

                                    <a asp-area="Admin" asp-action="DeleteFilmPage" asp-controller="HomeAdmin" asp-route-id="@item.id" class="btn btn-light btn-icon-split">
                                        <span class="icon text-gray-600">
                                            <i class="fas fa-arrow-right"></i>
                                        </span>
                                        <span class="text">Sil</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

